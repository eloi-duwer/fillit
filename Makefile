NAME = fillit

SRC =	./srcs/main.c \
		./srcs/traitement.c \
		./srcs/little_functions.c \
		./srcs/ft_print_tab.c \
		./srcs/ft_fill_globals.c

OBJS = ./main.o \
		./traitement.o \
		./little_functions.o \
		./ft_print_tab.o \
		./ft_fill_globals.o

all:$(NAME)

$(NAME):
	gcc -c $^ $(SRC) -Wall -Werror -Wextra
	gcc $(OBJS) -o $(NAME)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

coffee:
